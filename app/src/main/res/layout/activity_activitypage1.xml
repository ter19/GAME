                android:tag="7"
                android:textSize="60sp"
                tools:text="7" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@android:color/darker_gray"
                android:tag="8"
                android:textSize="60sp"
                tools:text="8" />

        </LinearLayout>


    </LinearLayout>





</RelativeLayout>